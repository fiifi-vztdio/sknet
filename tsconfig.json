{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@sports-talent/shared/*": ["./packages/shared/src/*"],
      "@sports-talent/ui/*": ["./packages/ui/src/*"],
      "@sports-talent/api-client/*": ["./packages/api-client/src/*"],
      "@sports-talent/types/*": ["./packages/types/src/*"],
      "@sports-talent/utils/*": ["./packages/utils/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/.next/types/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules", "**/dist", "**/.next"]
}
