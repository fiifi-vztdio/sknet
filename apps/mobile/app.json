{
  "expo": {
    "name": "Sports Talent",
    "slug": "sports-talent-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sportstalent.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to record sports videos.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone to record audio with videos.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select videos for upload."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.sportstalent.mobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Sports Talent to access your camera to record videos."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Sports Talent to access your microphone to record audio."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
